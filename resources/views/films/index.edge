<body>

  @include('layouts/main')

  <main>
    @each(film in films)
      <div class="container">
        <div class="card">
          <img src="{{film.photo}}" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title">
                <strong>
                  {{film.titre}}
                </strong> 
              </h5>
              <p class="card-text">{{film.description}}</p>
              <p class="card-text">{{film.duree}}</p>
              <a href="films/{{film.id}}/afficher" class="btn btn-primary">Voir plus</a>
            </div>
        </div>
      </div>
    @endeach  
  </main>
</body>
    
